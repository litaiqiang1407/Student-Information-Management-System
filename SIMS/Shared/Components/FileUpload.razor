@using Microsoft.AspNetCore.Components.Forms

<div class="upload-photo">
    <label class="photo-icon">
        <img id="photo-preview" src="@FileUrl" alt="Preview" style="@(string.IsNullOrEmpty(FileUrl) ? "display:none;" : "display:block;")" />
        <i class="bi bi-camera"></i>
        <InputFile id="photo-upload" accept="image/*" OnChange="OnFileChange" style="opacity: 0; position: absolute; width: 100%; height: 100%; cursor: pointer;" />
    </label>
    <p>Upload Photo</p>
</div>

@code {
    [Parameter]
    public EventCallback<InputFileChangeEventArgs> OnFileSelected { get; set; }

    [Parameter]
    public string FileUrl { get; set; }

    private async Task OnFileChange(InputFileChangeEventArgs e)
    {
        await OnFileSelected.InvokeAsync(e);
    }
}
