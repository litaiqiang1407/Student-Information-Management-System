@code {
    [Parameter] public string Message { get; set; }
    [Parameter] public bool IsSuccess { get; set; }
    private string ToastClass => IsSuccess ? "bg-success" : "bg-danger";
    private string ShowClass => showToast ? "show toast-auto-hide" : "";

    private bool showToast = true;

    protected override void OnInitialized()
    {
        Task.Delay(3000).ContinueWith(_ =>
        {
            InvokeAsync(() =>
            {
                showToast = false;
                StateHasChanged(); 
            });
        });
    }
}

<div class="toast-container">
    @if (showToast)
    {
        <div class="toast align-items-center text-white border-0 @ToastClass @ShowClass" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @Message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>
