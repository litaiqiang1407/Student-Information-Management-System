@page "/lecturer"

@layout SIMS.Shared.Layouts.MainLayout
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject SIMS.Shared.Services.MenuService MenuService
@inject SIMS.Shared.Services.HeaderTitleService HeaderTitleService

<PageTitle>Lecturer</PageTitle>

@code {
    private string HeaderTitle = "Welcome back!";

    private List<MenuItem> menuItems = new List<MenuItem>
    {
        new MenuItem { Label = "Timetable", Icon = "bi-calendar-week", Url = "/lecturer/timetable" },
        new MenuItem { Label = "Attendance", Icon = "bi-file-earmark-medical", Url = "/lecturer/enrollment" },
        new MenuItem { Label = "Courses", Icon = "bi-book", Url = "/lecturer/courses" },
        new MenuItem { Label = "Class", Icon = "bi-journal-text", Url = "/lecturer/curriculum" },
        new MenuItem { Label = "Department", Icon = "bi-journal", Url = "/lecturer/department" },
        new MenuItem { Label = "Major", Icon = "bi-kanban", Url = "/lecturer/major" },
    };

    protected override void OnInitialized()
    {
        MenuService.MenuItems = menuItems;
        HeaderTitleService.Title = HeaderTitle;
    }
}
